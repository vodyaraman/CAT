---
// Основа страницы
import BasePageLayout from "@/layouts/BasePageLayout.astro";
import Header from "@/components/header/Header.astro";

// Компоненты страницы
import { IconButton, LinkButton, MainButton } from "@/components/buttons";
import { FormExamplePage } from "@/components/form";
import FormInput from "@/components/inputs/FormInput";

// Контент страница
import InstIcon from "@/assets/icons/socials/instagram.svg";
import TgIcon from "@/assets/icons/socials/telegram.svg";
import YTIcon from "@/assets/icons/socials/youtube.svg";
---

<BasePageLayout
	title="Главная"
	description="Главная страница сайта"
	keywords="Ключевые слова"
>
	<Header />
	<section class="hero section">
		<h1>Лорем Ipsum</h1>
