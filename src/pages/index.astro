		<FormInput
			id="adress"
			type="adress"
			onChange={() => console.log("Изменился")}
			label="Adress"
			client:load
		/>
		<div class="button-wrapper">
			<LinkButton
				text="Перейти"
				href="/second"
				className="contained"
				client:load
			/>
			<MainButton
				text="Отключена"
				onClick={() => {}}
				disabled={true}
				loading="false"
				client:load
			/>
